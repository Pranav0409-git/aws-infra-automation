pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
  }

  stages {

    stage('Copy State File') {
      steps {
        sh '''
          cp /var/lib/jenkins/workspace/terraform-infra-build/terraform.tfstate .
          cp /var/lib/jenkins/workspace/terraform-infra-build/terraform.tfstate.backup .
        '''
      }
    }
    
    stage('Terraform Init') {
      steps {
        withAWS(credentials: 'aws-cred', region: 'us-east-1') {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Destroy') {
      steps {
        withAWS(credentials: 'aws-cred', region: 'us-east-1') {
          sh 'terraform destroy -auto-approve'
        }
      }
    }

  }
}
